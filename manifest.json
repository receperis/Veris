{
  "manifest_version": 3,
  "name": "Veris",
  "version": "1.0.7",
  "description": "Select text on any page to see an inline translation popup.",
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs", "notifications", "alarms"],
  "action": {
    "default_title": "Veris",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["content_script.css", "styles/dynamic-ui.css"]
    }
  ]
}
